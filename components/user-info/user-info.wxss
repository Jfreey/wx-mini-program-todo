.userinfo {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}

.userinfo-avatar {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
}

.userinfo-nickname {
    padding: 0 20rpx;
    color: #5c5c5c;
}

.userinfo-panel {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.todo-count {
    color: #5c5c5c;
    padding: 0 20rpx;
}

.todo-count text {
    color: #f08080;
}

